<%- layout('/layouts/boilerplate') %>

    <div class="container-fluid p-4">
        <a class="btn btn-light" href="/showers">חזור</a>
        <form action="/showers/edit/<%= shower._id %>?_method=PUT" method="POST">

            <div class="row justify-content-center mt-2">
                <% for (const img of shower.images) { %>
                    <div class="col-12 col-sm-6 col-lg-3 mb-2">
                        <img src="<%= img.url %>" alt=""
                            style="object-fit: cover; object-position: center; width: 100%;">
                    </div>
                    <% } %>
            </div>

            <div class="row mt-3">

                <%- include('../partials/features', { shower, features, translationMap , type }) %>

            </div>

            <div class="row mt-5">
                <button class="btn successBT" type="submit">שמור שינויים</button>
            </div>

        </form>
    </div>